<metro:MetroWindow x:Class="LogArchive.Views.MainWindow"
				   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
				   xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
				   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				   xmlns:livet="http://schemas.livet-mvvm.net/2011/wpf"
				   xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
				   xmlns:metro2="clr-namespace:Grabacr07.Desktop.Metro.Controls;assembly=Desktop.Metro"
				   xmlns:views="clr-namespace:LogArchive.Views"
				   xmlns:viewModels="clr-namespace:LogArchive.ViewModels"
				   xmlns:behaviors="clr-namespace:LogArchive.Views.Behaviors"
				   xmlns:controls="clr-namespace:LogArchive.Views.Controls"
				   mc:Ignorable="d"
				   Title="{Binding Title}" 
				   Height="676" 
				   Width="800"
				   IsRestoringWindowPlacement="True"
				   SnapsToDevicePixels="True"
				   TextOptions.TextFormattingMode="Display"
				   UseLayoutRounding="True" 
				   Background="{DynamicResource ThemeBrushKey}" 
				   Foreground="{DynamicResource ActiveForegroundBrushKey}">
	<i:Interaction.Triggers>
		<livet:InteractionMessageTrigger Messenger="{Binding Messenger}"
										 MessageKey="Window/Location">
			<behaviors:SetWindowLocationAction />
		</livet:InteractionMessageTrigger>
		<livet:InteractionMessageTrigger Messenger="{Binding Messenger, Mode=OneWay}"
										 MessageKey="Window/Activate">
			<livet:WindowInteractionMessageAction />
		</livet:InteractionMessageTrigger>
	</i:Interaction.Triggers>
	<metro:MetroWindow.Resources>
		<ResourceDictionary>
			<Style x:Key="TabLikeRadioButtonStyleKey"
				   TargetType="{x:Type RadioButton}">
				<Setter Property="OverridesDefaultStyle"
						Value="True" />
				<Setter Property="Background"
						Value="{DynamicResource SemiactiveBackgroundBrushKey}" />
				<Setter Property="Foreground"
						Value="{DynamicResource ForegroundBrushKey}" />
				<Setter Property="FontFamily"
						Value="Segoe UI Light" />
				<Setter Property="Margin"
						Value="0,0,0,15" />
				<Setter Property="FocusVisualStyle"
						Value="{DynamicResource {x:Static SystemParameters.FocusVisualStyleKey}}" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type RadioButton}">
							<Grid Background="Transparent"
								  SnapsToDevicePixels="True">
								<Grid.ColumnDefinitions>
									<ColumnDefinition />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<Rectangle Grid.Row="0"
										   Fill="{TemplateBinding Background}" />
								<Path x:Name="Arrow"
									  Grid.Column="1"
									  Data="M 0,0 0,10 30,5 z"
									  Width="20"
									  Fill="{TemplateBinding Background}"
									  Stretch="Fill" />
								<ContentPresenter Grid.Column="0"
												  Margin="15,8,10,8"
												  Focusable="False"
												  RecognizesAccessKey="True"
												  TextElement.FontFamily="{TemplateBinding FontFamily}" />
							</Grid>
							<ControlTemplate.Triggers>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="IsChecked"
												   Value="False" />
										<Condition Property="IsMouseOver"
												   Value="False" />
										<Condition Property="IsPressed"
												   Value="False" />
									</MultiTrigger.Conditions>
									<Setter TargetName="Arrow"
											Property="Visibility"
											Value="Hidden" />
								</MultiTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
				<Style.Triggers>
					<Trigger Property="IsMouseOver"
							 Value="True">
						<Setter Property="Background"
								Value="{DynamicResource ActiveBackgroundBrushKey}" />
						<Setter Property="TextElement.Foreground"
								Value="{DynamicResource ActiveForegroundBrushKey}" />
					</Trigger>
					<Trigger Property="IsPressed"
							 Value="True">
						<Setter Property="Background"
								Value="{DynamicResource AccentHighlightBrushKey}" />
						<Setter Property="TextElement.Foreground"
								Value="{DynamicResource AccentForegroundBrushKey}" />
					</Trigger>
					<Trigger Property="IsChecked"
							 Value="True">
						<Setter Property="Background"
								Value="{DynamicResource AccentBrushKey}" />
						<Setter Property="TextElement.Foreground"
								Value="{DynamicResource AccentForegroundBrushKey}" />
					</Trigger>
				</Style.Triggers>
			</Style>
		</ResourceDictionary>
	</metro:MetroWindow.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="23" />
		</Grid.RowDefinitions>

		<!-- #region CaptionBar -->
		<Border metro:MetroWindow.IsCaptionBar="True"
				Panel.ZIndex="100">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<controls:AppIcon Width="36"
								  Height="36"
								  Background="Transparent"
								  AnchorVisibility="Collapsed"
								  BandVisibility="Collapsed" />

				<TextBlock Grid.Column="1"
						   Text="{Binding Title}"
						   Style="{DynamicResource CaptionTextStyleKey}"
						   Margin="2,0,8,0" />

				<StackPanel Grid.Column="2"
							Orientation="Horizontal"
							HorizontalAlignment="Right"
							VerticalAlignment="Top"
							WindowChrome.IsHitTestVisibleInChrome="True">
					<metro:SystemButtons />
				</StackPanel>
			</Grid>
		</Border>
		<!-- #endregion -->
		<Grid Grid.Row="1" Margin="7">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<StackPanel Orientation="Horizontal">
					<RadioButton x:Name="Information"
								 Style="{StaticResource TabLikeRadioButtonStyleKey}"
								 IsChecked="True">
						<TextBlock Text="정보"
							   FontFamily="{DynamicResource EmphaticFontFamilyKey}"
							   FontSize="16"
							   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}, Path=Foreground}" />
					</RadioButton>
					<RadioButton x:Name="ItemTab"
								 Style="{StaticResource TabLikeRadioButtonStyleKey}">
						<TextBlock Text="장비개발목록"
							   FontFamily="{DynamicResource EmphaticFontFamilyKey}"
							   FontSize="16"
							   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}, Path=Foreground}" />
					</RadioButton>
					<RadioButton x:Name="BuildTab"
							 Style="{StaticResource TabLikeRadioButtonStyleKey}">
						<TextBlock Text="건조목록"
							   FontFamily="{DynamicResource EmphaticFontFamilyKey}"
							   FontSize="16"
							   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}, Path=Foreground}" />
					</RadioButton>
					<RadioButton x:Name="DropTab"
							 Style="{StaticResource TabLikeRadioButtonStyleKey}">
						<TextBlock Text="드랍목록"
							   FontFamily="{DynamicResource EmphaticFontFamilyKey}"
							   FontSize="16"
							   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}, Path=Foreground}" />
					</RadioButton>
				</StackPanel>
				<Grid Grid.Row="1"
					  Visibility="{Binding ElementName=Information, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
					<FlowDocumentScrollViewer Padding="0,-18,0,0">
						<FlowDocument FontSize="12"
									  Foreground="{DynamicResource ForegroundBrushKey}"
									  FontFamily="Meiryo UI"
									  TextAlignment="Left">
							<Paragraph>
								<Run Foreground="White"
									 FontSize="20"
									 Text="소개" />
							</Paragraph>
							<Paragraph Language="ko-KR">
								<Run Text="「제독업무도 바빠！」의 로그파일을 읽기 위한 보조 어플리케이션입니다." />
								<LineBreak />
								<Run Text=".csv파일을 읽는것이 아닌 Bin폴더 내의 .bin파일을 읽는데 사용됩니다." />
							</Paragraph>
							<Paragraph Language="ko-KR">
								<Run Text=".bin파일변환은 매번 할 필요없습니다. bin파일은 csv파일과 동일하게 작성됩니다." />
							</Paragraph>
							<Paragraph Language="ko-KR">
								<Run Text="Project home:" />
								<metro2:HyperlinkEx Uri="http://KanColleViewerKr.tk">
									<Run Text="http://KanColleViewerKr.tk" />
								</metro2:HyperlinkEx>
								<LineBreak />
								<Run Text="업데이트 링크:" />
								<metro2:HyperlinkEx Uri="https://github.com/FreyYa/KCVLogArchive/releases">
									<Run Text="https://github.com/FreyYa/KCVLogArchive/releases" />
								</metro2:HyperlinkEx>
								<LineBreak />
								<Run Text="Source code:" />
								<metro2:HyperlinkEx Uri="https://github.com/FreyYa/KCVLogArchive">
									<Run Text="https://github.com/FreyYa/KCVLogArchive" />
								</metro2:HyperlinkEx>
								<LineBreak />
								<Run Text="Origin:" />
								<metro2:HyperlinkEx Uri="https://github.com/Grabacr07/KanColleViewer">
									<Run Text="https://github.com/Grabacr07/KanColleViewer" />
								</metro2:HyperlinkEx>
							</Paragraph>
						</FlowDocument>
					</FlowDocumentScrollViewer>
				</Grid>

				<Grid Margin="0,10,0,0" Grid.Row="1" 
					  Visibility="{Binding ElementName=ItemTab, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
						<metro2:CallMethodButton Content="불러오기"
												 HorizontalAlignment="Left"
												 Padding="20,6"
		 							   	  		 MethodName="RefreshItem"/>
