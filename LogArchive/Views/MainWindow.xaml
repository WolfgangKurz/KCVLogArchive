									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="적 함대"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Rank}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="랭크"/>
									</GridViewColumnHeader>
								</GridViewColumn>
							</GridView>
