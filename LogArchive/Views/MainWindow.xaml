												 HorizontalAlignment="Left"
												 Padding="20,6"
												 Margin="10,0,0,0"
												 MethodName="csvtobin"/>
					</StackPanel>
					<ListView ItemsSource="{Binding ItemLists}"
							  Grid.Row="1"
							  ItemContainerStyle="{DynamicResource GridViewItemContainerStyleKey}">
						<ListView.Resources>
							<Style TargetType="{x:Type TextBlock}">
								<Setter Property="Margin"
									Value="5,4" />
							</Style>
							<Style TargetType="{x:Type GridViewColumnHeader}">
								<Setter Property="OverridesDefaultStyle"
									Value="True" />
								<Setter Property="BorderThickness"
									Value="0,0,0,1" />
								<Setter Property="BorderBrush"
									Value="{DynamicResource BorderBrushKey}" />
								<Setter Property="Background"
									Value="{DynamicResource BackgroundBrushKey}" />
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
											<Grid>
												<Border BorderThickness="{TemplateBinding BorderThickness}"
													BorderBrush="{TemplateBinding BorderBrush}"
													Background="{TemplateBinding Background}">
													<ContentPresenter Margin="{TemplateBinding Padding}" />
												</Border>
												<Thumb x:Name="PART_HeaderGripper"
												   HorizontalAlignment="Right"
												   BorderBrush="{TemplateBinding BorderBrush}"
												   Margin="0,0,-6,0">
													<Thumb.Template>
														<ControlTemplate TargetType="{x:Type Thumb}">
															<Border Background="Transparent"
																Width="13">
																<Rectangle Width="1"
																	   Stroke="{TemplateBinding BorderBrush}" />
															</Border>
														</ControlTemplate>
													</Thumb.Template>
												</Thumb>
											</Grid>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ListView.Resources>
						<ListView.View>
							<GridView>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Date}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="날짜"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Results}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="결과"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Assistant}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="비서함"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Fuel}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="연료"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Bullet}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="탄"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Steel}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="강재"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding bauxite}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="보크사이트"/>
									</GridViewColumnHeader>
								</GridViewColumn>
							</GridView>
						</ListView.View>
					</ListView>
					<Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<metro2:CallMethodButton MethodName="ItemGoBack"
												 Height="30"
												 Style="{DynamicResource CircleButtonStyleKey}"
												 ToolTip="전 페이지로 이동">
							<Viewbox Margin="5">
								<Path Data="M17.358398,14.795208 L22.22168,14.795208 L17.109375,20.0247 L28.227539,20.0247 L28.227539,23.657513 L17.109375,23.657513 L22.22168,28.887005 L17.358398,28.887005 L10.649414,21.870403 L10.649414,21.81181 z"
									  Stretch="Uniform"
									  Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}, Path=Foreground}" />
							</Viewbox>
						</metro2:CallMethodButton>
						<metro:PromptTextBox Grid.Column="1"
								 Prompt=""
								 Width="30"
								 Margin="10,0">
							<metro:PromptTextBox.Text>
								<Binding Path="ItemPages"
										 UpdateSourceTrigger="PropertyChanged">
									<Binding.ValidationRules>
										<metro:Int32Rule Min="0"/>
									</Binding.ValidationRules>
								</Binding>
							</metro:PromptTextBox.Text>

						</metro:PromptTextBox>

						<TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0">
							<Run Text="/"/>
							<Run Text="{Binding ItemMaxPage}"/>
						</TextBlock>
						<metro2:CallMethodButton Grid.Column="3"
								 MethodName="ItemGoForward"
								 Height="30"
								 Margin="2,0"
								 Style="{DynamicResource CircleButtonStyleKey}"
								 ToolTip="앞 페이지로 이동">
							<Viewbox Margin="5">
								<Path Data="M17.387695,14.795208 L22.250977,14.795208 L28.959961,21.81181 L28.959961,21.870403 L22.250977,28.887005 L17.387695,28.887005 L22.5,23.657513 L11.381836,23.657513 L11.381836,20.0247 L22.5,20.0247 z"
									  Stretch="Uniform"
									  Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}, Path=Foreground}" />
							</Viewbox>
						</metro2:CallMethodButton>
					</Grid>
				</Grid>
				<Grid Margin="0,10,0,0" Grid.Row="1" 
							Visibility="{Binding ElementName=BuildTab, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
						<metro2:CallMethodButton Content="불러오기"
												 HorizontalAlignment="Left"
												 Padding="20,6"
		 							   	  		 MethodName="RefreshBuild"/>
						<metro2:CallMethodButton Content="csv를 bin으로 변환"
												 HorizontalAlignment="Left"
												 Padding="20,6"
												 Margin="10,0,0,0"
												 MethodName="csvtobin"/>
					</StackPanel>
					<ListView ItemsSource="{Binding BuildLists}"
							  Grid.Row="1"
					  ItemContainerStyle="{DynamicResource GridViewItemContainerStyleKey}">
						<ListView.Resources>
							<Style TargetType="{x:Type TextBlock}">
								<Setter Property="Margin"
									Value="5,4" />
							</Style>
							<Style TargetType="{x:Type GridViewColumnHeader}">
								<Setter Property="OverridesDefaultStyle"
									Value="True" />
								<Setter Property="BorderThickness"
									Value="0,0,0,1" />
								<Setter Property="BorderBrush"
									Value="{DynamicResource BorderBrushKey}" />
								<Setter Property="Background"
									Value="{DynamicResource BackgroundBrushKey}" />
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
											<Grid>
												<Border BorderThickness="{TemplateBinding BorderThickness}"
													BorderBrush="{TemplateBinding BorderBrush}"
													Background="{TemplateBinding Background}">
													<ContentPresenter Margin="{TemplateBinding Padding}" />
												</Border>
												<Thumb x:Name="PART_HeaderGripper"
												   HorizontalAlignment="Right"
												   BorderBrush="{TemplateBinding BorderBrush}"
												   Margin="0,0,-6,0">
													<Thumb.Template>
														<ControlTemplate TargetType="{x:Type Thumb}">
															<Border Background="Transparent"
																Width="13">
																<Rectangle Width="1"
																	   Stroke="{TemplateBinding BorderBrush}" />
															</Border>
														</ControlTemplate>
													</Thumb.Template>
												</Thumb>
											</Grid>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ListView.Resources>
						<ListView.View>
							<GridView>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Date}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="날짜"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Results}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="결과"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Fuel}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="연료"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Bullet}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="탄"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding Steel}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="강재"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding bauxite}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="보크사이트"/>
									</GridViewColumnHeader>
								</GridViewColumn>
								<GridViewColumn Width="Auto">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<TextBlock Margin="6,3,0,3" Text="{Binding UseItems}"/>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
									<GridViewColumnHeader>
										<TextBlock Text="개발자재"/>
									</GridViewColumnHeader>
								</GridViewColumn>
							</GridView>
						</ListView.View>
					</ListView>
					<Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<metro2:CallMethodButton MethodName="BuildGoBack"
												 Height="30"
												 Style="{DynamicResource CircleButtonStyleKey}"
												 ToolTip="전 페이지로 이동">
							<Viewbox Margin="5">
								<Path Data="M17.358398,14.795208 L22.22168,14.795208 L17.109375,20.0247 L28.227539,20.0247 L28.227539,23.657513 L17.109375,23.657513 L22.22168,28.887005 L17.358398,28.887005 L10.649414,21.870403 L10.649414,21.81181 z"
									  Stretch="Uniform"
									  Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}, Path=Foreground}" />
							</Viewbox>
						</metro2:CallMethodButton>
						<metro:PromptTextBox Grid.Column="1"
								 Prompt=""
								 Width="30"
								 Margin="10,0">
							<metro:PromptTextBox.Text>
								<Binding Path="BuildPages"
							 UpdateSourceTrigger="PropertyChanged">
									<Binding.ValidationRules>
										<metro:Int32Rule Min="0"/>
									</Binding.ValidationRules>
								</Binding>
							</metro:PromptTextBox.Text>

						</metro:PromptTextBox>

						<TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0">
							<Run Text="/"/>
							<Run Text="{Binding BuildMaxPage}"/>
						</TextBlock>
						<metro2:CallMethodButton Grid.Column="3"
												 MethodName="BuildGoForward"
												 Height="30"
												 Margin="2,0"
